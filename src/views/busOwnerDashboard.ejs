<script>
  function openJoinRequestsModal() {
    fetch('/owner/dashboard/join-requests')
      .then(res => res.json())
      .then(data => {
        const tbody = document.getElementById("joinRequestsTableBody");
        tbody.innerHTML = "";

        data.forEach(request => {
          const tr = document.createElement("tr");
          tr.innerHTML = `
            <td>${request.full_name}</td>
            <td>--</td>
            <td>${request.phone_number}</td>
            <td>--</td>
            <td>
              <button class="action-btn" onclick="handleAccept('${request.phone_number}')">Accept</button>
              <button class="action-btn reject-btn" onclick="handleReject('${request.phone_number}')">Reject</button>
            </td>
          `;
          tbody.appendChild(tr);
        });

        // Show the modal only when the data is fetched
        document.getElementById("joinRequestsModal").style.display = "block";
      })
      .catch(err => {
        console.error("Error fetching join requests:", err);
        alert("Failed to load join requests");
      });
  }

  function closeModal(id) {
    document.getElementById(id).style.display = "none";
  }

  function handleAccept(phoneNumber) {
    fetch('/owner/dashboard/join-requests/accept', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ studentPhone: phoneNumber })
    })
    .then(res => res.json())
    .then(data => {
      alert("Request accepted");
      openJoinRequestsModal(); // Refresh the list
    })
    .catch(err => console.error("Error accepting request:", err));
  }

  function handleReject(phoneNumber) {
    fetch('/owner/dashboard/join-requests/reject', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ studentPhone: phoneNumber })
    })
    .then(res => res.json())
    .then(data => {
      alert("Request rejected");
      openJoinRequestsModal(); // Refresh the list
    })
    .catch(err => console.error("Error rejecting request:", err));
  }
</script>
